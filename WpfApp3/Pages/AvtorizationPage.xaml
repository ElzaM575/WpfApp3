<Page x:Class="WpfApp3.Pages.AvtorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp3.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AvtorizationPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <TextBlock>Логин</TextBlock>
                <TextBox x:Name="LoginTb"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
             HorizontalAlignment="Right">
                <TextBlock>Пароль</TextBlock>
                <TextBox x:Name="PasswordTb"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button x:Name="LoginBtn" Click="LoginBtn_Click">Вход</Button>
                <Button x:Name="RegistrationBtn" Click="RegistrationTb_Click">Регистрация</Button>
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
